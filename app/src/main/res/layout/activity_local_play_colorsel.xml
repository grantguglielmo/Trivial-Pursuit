<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/colorsel"
    android:background="@color/colorPrimary"
    tools:context="com.trivial_pursuit.trivialpursuit.LocalPlayColorSel">
    <TextView
        android:id="@+id/textColorSel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="32sp"
        android:text="Player 1 Select\n   Your Color"
        android:textColor="@color/black_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp" />
    <ImageButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="left"
        android:onClick="blueSel"
        android:background="@null"
        android:src="@drawable/bluewheel"
        android:id="@+id/imageButton4"
        android:layout_below="@+id/textColorSel"
        android:layout_toLeftOf="@+id/imageButton6"
        android:layout_toStartOf="@+id/imageButton6"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="70dp" />
    <ImageButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="left"
        android:onClick="pinkSel"
        android:background="@null"
        android:src="@drawable/pinkwheel"
        android:id="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="left"
        android:onClick="yellowSel"
        android:background="@null"
        android:src="@drawable/yellowwheel"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/imageButton3" />
    <ImageButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="left"
        android:onClick="purpleSel"
        android:background="@null"
        android:src="@drawable/purplewheel"
        android:layout_marginTop="22dp"
        android:id="@+id/imageButton5"
        android:layout_below="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4" />
    <ImageButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="left"
        android:onClick="greenSel"
        android:background="@null"
        android:src="@drawable/greenwheel"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:id="@+id/imageButton6" />
    <ImageButton
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="left"
        android:onClick="orangeSel"
        android:background="@null"
        android:src="@drawable/orangewheel"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:id="@+id/imageButton7"/>
</RelativeLayout>
